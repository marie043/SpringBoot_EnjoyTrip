<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.enjoy.board.model.mapper.CommentMapper">
	<select id="readComment" parameterType="board" resultMap="comment">
		select * 
		from `comment`
		where `article_no`=#{article_no}
		order by `idx` desc
	</select>
	<insert id="createCommnet" parameterType="commnet">
		insert into `comment`(`article_no`, `user_id`, `content`)
		values(#{article_no}, #{user_id}, #{content})
	</insert>
</mapper>